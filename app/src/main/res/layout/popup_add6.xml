<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0" />

    <LinearLayout
        android:layout_centerInParent="true"
        android:background="@color/color_2B2B2B"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/color_tab"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_popup_quxiao"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:text="取消"
                android:textColor="@color/color_del"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="添加验收遗留问题"
                android:textColor="@color/color_FFFFFF"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_popup_save"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="24dp"
                android:text="保存"
                android:textColor="@color/color_save" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="产品编号"
                            android:textColor="@color/color_FFFFFF" />

                        <TextView
                            android:id="@+id/tv_productCode"
                            android:layout_width="300dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_edtext"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="遗留问题"
                            android:textColor="@color/color_FFFFFF" />

                        <TextView
                            android:id="@+id/tv_question"
                            android:layout_width="300dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_edtext"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="遗留文件落实确认人"
                            android:textColor="@color/color_FFFFFF" />

                        <TextView
                            android:id="@+id/tv_confirmer"
                            android:layout_width="300dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_edtext"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="遗留问题落实时间"
                            android:textColor="@color/color_FFFFFF" />

                        <TextView
                            android:id="@+id/tv_confirmTime"
                            android:layout_width="300dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_edtext"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="遗留问题落实说明"
                            android:textColor="@color/color_FFFFFF" />

                        <EditText
                            android:id="@+id/tv_description"
                            android:layout_width="300dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_edtext"
                            android:cursorVisible="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="添加文件"
                            android:textColor="@color/color_FFFFFF" />

                        <TextView
                            android:id="@+id/tv_file"
                            android:layout_width="300dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_edtext"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="浏览"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <com.example.acceptance2.view.MyListView
                        android:layout_marginBottom="50dp"
                        android:id="@+id/lv_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="10dp"
                        android:divider="#00000000" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>