<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0" />

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@color/color_2B2B2B"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_tab"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_popup_quxiao"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:text="取消"
                android:textColor="@color/color_del"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="添加检查组"
                android:textColor="@color/color_FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingRight="24dp"
                android:text="保存"
                android:textColor="@color/color_save"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_margin="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检查组名称"
                        android:textColor="@color/color_FFFFFF" />

                    <EditText
                        android:id="@+id/tv_groupName"
                        android:layout_width="300dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/shape_edtext"
                        android:cursorVisible="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:textColor="@color/color_FFFFFF"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="排序号"
                        android:textColor="@color/color_FFFFFF" />

                    <EditText
                        android:id="@+id/tv_sort"
                        android:layout_width="300dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_edtext"
                        android:cursorVisible="true"
                        android:gravity="center_vertical"
                        android:numeric="integer"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/color_FFFFFF"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否有检查结论"
                        android:textColor="@color/color_FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="否"
                        android:textColor="@color/color_FFFFFF" />

                    <Switch
                        android:id="@+id/tv_isConclusion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:textColor="@color/color_FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否有测试表"
                        android:textColor="@color/color_FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="否"
                        android:textColor="@color/color_FFFFFF" />

                    <Switch
                        android:id="@+id/tv_textTable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:textColor="@color/color_FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否有仪器仪表专用设备表"
                        android:textColor="@color/color_FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="否"
                        android:textColor="@color/color_FFFFFF" />

                    <Switch
                        android:id="@+id/tv_isTable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:textColor="@color/color_FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_PropertySet"
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/shape_text"
                        android:gravity="center"
                        android:text="添加扩展属性"
                        android:textColor="@color/color_5398F7" />

                    <com.example.acceptance2.view.MyListView
                        android:id="@+id/lv_PropertySet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:divider="#00000000" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</RelativeLayout>