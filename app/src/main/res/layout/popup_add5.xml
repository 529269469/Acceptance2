<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0" />


    <LinearLayout
        android:background="@color/color_2B2B2B"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="500dp"
        android:layout_height="300dp">


        <RelativeLayout
            android:background="@color/color_tab"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_popup_quxiao"
                android:layout_centerVertical="true"
                android:textColor="@color/color_del"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:text="取消"
                android:layout_width="60dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加验收遗留问题"
                android:textColor="@color/color_FFFFFF" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_popup_save"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_save"
                android:gravity="center"
                android:paddingRight="24dp"
                android:text="保存"
                android:layout_width="60dp"
                android:layout_height="30dp"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品编号"
                        android:textColor="@color/color_FFFFFF" />

                    <TextView
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:id="@+id/tv_productCode"
                        android:layout_width="300dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="遗留问题"
                        android:textColor="@color/color_FFFFFF" />

                    <EditText
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:id="@+id/tv_question"
                        android:layout_width="300dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="遗留文件落实确认人"
                        android:textColor="@color/color_FFFFFF" />

                    <EditText
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:id="@+id/tv_confirmer"
                        android:layout_width="300dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_edtext"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

        </ScrollView>


    </LinearLayout>
</RelativeLayout>