<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0" />

    <LinearLayout
        android:background="@color/color_2B2B2B"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_3C3F41"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:text="取消"
                android:textColor="@color/color_del"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="导出数据包模板"
                android:textColor="@color/color_FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingRight="24dp"
                android:text="确定"
                android:textColor="@color/color_save"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:textColor="@color/color_FFFFFF"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模板名称" />

            <EditText
                android:textColor="@color/color_FFFFFF"
                android:id="@+id/edit_name"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/shape_edtext"
                android:text="" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>