<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_2B2B2B"
    android:gravity="center_horizontal"
    tools:context=".ui.activity.main.NewActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#150339">

            <ImageView
                android:id="@+id/iv_genduo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/left" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_genduo"
                android:textSize="18sp"
                android:id="@+id/tv_tuichu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建新任务数据包"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:id="@+id/bt_yes"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:text="确定"
                android:layout_width="100dp"
                android:layout_height="44dp"/>

        </RelativeLayout>

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:padding="16dp"
                android:background="@drawable/shape_ed2"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:id="@+id/tv_name"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="500dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:id="@+id/tv_name2"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_toLeftOf="@id/tv_name"
                    android:text="名称："
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="36dp"
                    android:layout_toLeftOf="@id/tv_name2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bibi" />

                <EditText
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_acceptorUnit"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="500dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:id="@+id/tv_acceptorUnit2"
                    android:layout_marginTop="16dp"
                    android:layout_below="@id/tv_name"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_toLeftOf="@id/tv_acceptorUnit"
                    android:text="验收单位（甲方）："
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <ImageView
                    android:layout_below="@id/tv_name"
                    android:layout_toLeftOf="@id/tv_acceptorUnit2"
                    android:layout_marginTop="16dp"
                    android:layout_width="20dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bibi" />

                <EditText
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/tv_acceptorUnit"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_applyCompany"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="500dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:id="@+id/tv_applyCompany2"
                    android:text="申请单位（乙方）："
                    android:layout_toLeftOf="@id/tv_applyCompany"
                    android:layout_below="@id/tv_acceptorUnit"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <ImageView
                    android:layout_below="@id/tv_acceptorUnit"
                    android:layout_toLeftOf="@id/tv_applyCompany2"
                    android:layout_marginTop="16dp"
                    android:layout_width="20dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bibi" />

                <EditText
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/tv_applyCompany"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_modelSeriesName"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="500dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:text="型号名称："
                    android:layout_toLeftOf="@id/tv_modelSeriesName"
                    android:layout_below="@id/tv_applyCompany"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <EditText
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/tv_modelSeriesName"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_modelCode"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="500dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:text="型号代号："
                    android:layout_toLeftOf="@id/tv_modelCode"
                    android:layout_below="@id/tv_modelSeriesName"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <EditText
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/tv_modelCode"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_productCode"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="500dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:id="@+id/tv_productCode2"
                    android:text="产品代号："
                    android:layout_toLeftOf="@id/tv_productCode"
                    android:layout_below="@id/tv_modelCode"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <ImageView
                    android:layout_below="@id/tv_modelCode"
                    android:layout_toLeftOf="@id/tv_productCode2"
                    android:layout_marginTop="16dp"
                    android:layout_width="20dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bibi" />

                <EditText
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/tv_productCode"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_productName"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="500dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:id="@+id/tv_productName2"
                    android:text="产品名称："
                    android:layout_toLeftOf="@id/tv_productName"
                    android:layout_below="@id/tv_productCode"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <ImageView
                    android:layout_below="@id/tv_productCode"
                    android:layout_toLeftOf="@id/tv_productName2"
                    android:layout_marginTop="16dp"
                    android:layout_width="20dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bibi" />

                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/tv_productName"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_productType"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="500dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:id="@+id/tv_productType2"
                    android:text="产品类别："
                    android:layout_toLeftOf="@id/tv_productType"
                    android:layout_below="@id/tv_productName"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <ImageView
                    android:layout_below="@id/tv_productName"
                    android:layout_toLeftOf="@id/tv_productType2"
                    android:layout_marginTop="16dp"
                    android:layout_width="20dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bibi" />

                <EditText
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/tv_productType"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_batch"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="500dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:id="@+id/tv_batch2"
                    android:text="批次："
                    android:layout_toLeftOf="@id/tv_batch"
                    android:layout_below="@id/tv_productType"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <ImageView
                    android:layout_below="@id/tv_productType"
                    android:layout_toLeftOf="@id/tv_batch2"
                    android:layout_marginTop="16dp"
                    android:layout_width="20dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bibi" />

                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/tv_batch"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_stage"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="500dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:id="@+id/tv_stage2"
                    android:text="阶段标记："
                    android:layout_toLeftOf="@id/tv_stage"
                    android:layout_below="@id/tv_batch"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <ImageView
                    android:layout_below="@id/tv_batch"
                    android:layout_toLeftOf="@id/tv_stage2"
                    android:layout_marginTop="16dp"
                    android:layout_width="20dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bibi" />

                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_below="@id/tv_stage"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_moban"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="500dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:layout_marginBottom="100dp"
                    android:id="@+id/tv_moban2"
                    android:text="数据包模板："
                    android:layout_toLeftOf="@id/tv_moban"
                    android:layout_below="@id/tv_stage"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

                <ImageView
                    android:layout_below="@id/tv_stage"
                    android:layout_toLeftOf="@id/tv_moban2"
                    android:layout_marginTop="16dp"
                    android:layout_width="20dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bibi" />



            </RelativeLayout>
        </ScrollView>

    </LinearLayout>
    
    
    <RelativeLayout
        android:visibility="gone"
        android:background="@color/color_99000000"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.ContentLoadingProgressBar
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            style="?android:attr/progressBarStyleSmall"/>
    </RelativeLayout>

</RelativeLayout>