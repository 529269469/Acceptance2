<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0" />

     <LinearLayout
         android:background="@color/color_2B2B2B"
         android:layout_centerInParent="true"
         android:orientation="vertical"
         android:layout_width="500dp"
         android:layout_height="400dp">

    <RelativeLayout
        android:background="@color/color_tab"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_popup_quxiao"
            android:layout_centerVertical="true"
            android:textColor="@color/color_del"
            android:gravity="center"
            android:paddingLeft="24dp"
            android:text="取消"
            android:layout_width="60dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加验收申请"
            android:textColor="@color/color_FFFFFF" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_popup_save"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_save"
            android:gravity="center"
            android:paddingRight="24dp"
            android:text="保存"
            android:layout_width="60dp"
            android:layout_height="30dp"/>
    </RelativeLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="200dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="产品代号"
                            android:textColor="@color/color_FFFFFF" />

                        <TextView
                            android:id="@+id/tv_productCodeName"
                            android:layout_width="300dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_edtext"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="产品名称"
                            android:textColor="@color/color_FFFFFF" />

                        <TextView
                            android:id="@+id/tv_productName"
                            android:layout_width="300dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_edtext"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="产品编号"
                            android:textColor="@color/color_FFFFFF" />

                        <EditText
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null"
                            android:id="@+id/tv_productCode"
                            android:layout_width="300dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_edtext"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="产品状态"
                            android:textColor="@color/color_FFFFFF" />

                        <EditText
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null"
                            android:id="@+id/tv_productStatus"
                            android:layout_width="300dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_edtext"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投产数量"
                            android:textColor="@color/color_FFFFFF" />

                        <EditText
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null"
                            android:id="@+id/tv_checkCount"
                            android:layout_width="60dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_edtext"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="已验收数量"
                            android:textColor="@color/color_FFFFFF" />

                        <EditText
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null"
                            android:id="@+id/tv_checkCount2"
                            android:layout_width="60dp"
                            android:layout_height="36dp"
                            android:background="@drawable/shape_edtext"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="验收数量"
                            android:textColor="@color/color_FFFFFF" />

                        <EditText
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null"
                            android:id="@+id/tv_checkCount3"
                            android:layout_width="60dp"
                            android:layout_height="36dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/shape_edtext"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否终检"
                            android:textColor="@color/color_FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="否"
                            android:textColor="@color/color_FFFFFF" />

                        <Switch
                            android:id="@+id/tv_isPureCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是"
                            android:textColor="@color/color_FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否军检"
                            android:textColor="@color/color_FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="否"
                            android:textColor="@color/color_FFFFFF" />

                        <Switch
                            android:id="@+id/tv_isArmyCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是"
                            android:textColor="@color/color_FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="筛选试验是否完成"
                            android:textColor="@color/color_FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="否"
                            android:textColor="@color/color_FFFFFF" />

                        <Switch
                            android:id="@+id/tv_isCompleteChoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是"
                            android:textColor="@color/color_FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="例行试验是否完成"
                            android:textColor="@color/color_FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="否"
                            android:textColor="@color/color_FFFFFF" />

                        <Switch
                            android:id="@+id/tv_isCompleteRoutine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是"
                            android:textColor="@color/color_FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否具备出厂交付条件"
                            android:textColor="@color/color_FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="否"
                            android:textColor="@color/color_FFFFFF" />

                        <Switch
                            android:id="@+id/tv_isSatisfyRequire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是"
                            android:textColor="@color/color_FFFFFF" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="       备 注"
                            android:textColor="@color/color_FFFFFF" />

                        <EditText
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null"
                            android:id="@+id/tv_description"
                            android:layout_width="300dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shape_edtext"
                            android:gravity="top"
                            android:paddingLeft="10dp"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>