<?xml version="1.0" encoding="utf-8"?>
<com.example.acceptance2.view.ListScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_2B2B2B"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:visibility="gone"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:visibility="visible"
                android:id="@+id/tv_del"
                android:gravity="center"
                android:background="@drawable/shape_text3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:text="删除检查组"
                android:layout_width="100dp"
                android:layout_height="36dp"/>

            <TextView
                android:visibility="gone"
                android:layout_marginRight="16dp"
                android:id="@+id/tv_xiugai"
                android:layout_toLeftOf="@+id/tv_del"
                android:gravity="center"
                android:background="@drawable/shape_text"
                android:layout_centerVertical="true"
                android:textColor="#2D7DF4"
                android:text="修改检查组"
                android:layout_width="100dp"
                android:layout_height="36dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_ed3"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_add"
                android:gravity="center"
                android:background="@drawable/shape_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#2D7DF4"
                android:text="添加检查项"
                android:layout_width="100dp"
                android:layout_height="30dp"/>

            <com.example.acceptance2.view.MyListView
                android:layout_marginTop="10dp"
                android:id="@+id/lv_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_add2"
                android:gravity="center"
                android:background="@drawable/shape_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#2D7DF4"
                android:text="测试表"
                android:layout_width="100dp"
                android:layout_height="30dp"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/ll_acceptDeviceSet"
                android:background="@color/color_3C3F41"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="序号"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="名称"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="要求值"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="测试值"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="备注"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <com.example.acceptance2.view.MyListView
                android:id="@+id/lv_testTable"
                android:background="@drawable/shape_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_add3"
                android:gravity="center"
                android:background="@drawable/shape_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#2D7DF4"
                android:text="仪器仪表专用设备表"
                android:layout_width="150dp"
                android:layout_height="30dp"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/ll_acceptDeviceSet2"
                android:background="@color/color_3C3F41"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="序号"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="名称"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="型号规格"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="精度"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="合格证和有效期"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="说明"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>



            </LinearLayout>

            <com.example.acceptance2.view.MyListView
                android:id="@+id/lv_acceptDeviceSet"
                android:background="@drawable/shape_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <com.example.acceptance2.view.MyListView
                android:layout_marginRight="50dp"
                android:layout_marginTop="16dp"
                android:id="@+id/lv_product_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout

                android:layout_marginTop="16dp"
                android:id="@+id/ll_conclusion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:textColor="@color/color_FFFFFF"
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="10dp"
                            android:textSize="14sp"
                            android:id="@+id/et_checkGroupConclusion"
                            android:layout_marginLeft="10dp"
                            android:gravity="top"
                            android:background="@drawable/shape_edtext"
                            android:layout_width="300dp"
                            android:layout_height="90dp"/>

                        <TextView
                            android:layout_toLeftOf="@id/et_checkGroupConclusion"
                            android:textColor="@color/color_FFFFFF"
                            android:text="乙方检查结论："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView

                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_edtext"
                            android:layout_marginLeft="10dp"
                            android:scaleType="fitXY"
                            android:id="@+id/iv_checkPerson"
                            android:layout_width="300dp"
                            android:layout_height="100dp" />
                        <ImageView

                            android:layout_alignParentRight="true"
                            android:visibility="visible"
                            android:background="@drawable/del"
                            android:layout_marginLeft="-15dp"
                            android:scaleType="fitXY"
                            android:id="@+id/iv_XX"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            android:layout_toLeftOf="@id/iv_checkPerson"
                            android:textColor="@color/color_FFFFFF"
                            android:text="乙方检查人签字："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:textColorHint="@color/color_FFFFFF"
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/iv_checkPerson"
                            android:layout_marginRight="100dp"
                            android:id="@+id/et_checkPerson"
                            android:layout_width="200dp"
                            android:layout_height="36dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/shape_edtext"
                            android:hint="请验收人签字"
                            android:textColor="@color/color_FFFFFF" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/color_FFFFFF"
                            android:layout_marginRight="100dp"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="10dp"
                            android:textSize="14sp"
                            android:id="@+id/et_checkTime"
                            android:gravity="center_vertical"
                            android:background="@drawable/shape_edtext"
                            android:layout_width="200dp"
                            android:layout_height="36dp"/>

                        <TextView
                            android:layout_toLeftOf="@id/et_checkTime"
                            android:textColor="@color/color_FFFFFF"
                            android:text="日期："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:textColor="@color/color_FFFFFF"
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="10dp"
                            android:textSize="14sp"
                            android:id="@+id/et_conclusionF"
                            android:layout_marginLeft="10dp"
                            android:gravity="top"
                            android:background="@drawable/shape_edtext"
                            android:layout_width="300dp"
                            android:layout_height="90dp"/>

                        <TextView
                            android:layout_toLeftOf="@id/et_conclusionF"
                            android:textColor="@color/color_FFFFFF"
                            android:text="甲方检查结论："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView

                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_edtext"
                            android:layout_marginLeft="10dp"
                            android:scaleType="fitXY"
                            android:id="@+id/iv_checkPersonF"
                            android:layout_width="300dp"
                            android:layout_height="100dp" />
                        <ImageView

                            android:layout_alignParentRight="true"
                            android:visibility="visible"
                            android:background="@drawable/del"
                            android:layout_marginLeft="-15dp"
                            android:scaleType="fitXY"
                            android:id="@+id/iv_XXF"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            android:layout_toLeftOf="@id/iv_checkPersonF"
                            android:textColor="@color/color_FFFFFF"
                            android:text="甲方检查人签字："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:textColorHint="@color/color_FFFFFF"
                            android:cursorVisible="true"
                            android:textCursorDrawable="@null"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/iv_checkPersonF"
                            android:layout_marginRight="100dp"
                            android:id="@+id/et_checkPersonF"
                            android:layout_width="200dp"
                            android:layout_height="36dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/shape_edtext"
                            android:hint="请验收人签字"
                            android:textColor="@color/color_FFFFFF" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/color_FFFFFF"
                            android:layout_marginRight="100dp"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="10dp"
                            android:textSize="14sp"
                            android:id="@+id/et_checkTimeF"
                            android:gravity="center_vertical"
                            android:background="@drawable/shape_edtext"
                            android:layout_width="200dp"
                            android:layout_height="36dp"/>

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_toLeftOf="@id/et_checkTimeF"
                            android:textColor="@color/color_FFFFFF"
                            android:text="日期："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>



                </LinearLayout>

            </LinearLayout>






        </LinearLayout>

    </LinearLayout>

</com.example.acceptance2.view.ListScrollView>