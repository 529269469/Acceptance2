<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0" />
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@color/color_2B2B2B"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_tab"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_popup_quxiao"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:text="取消"
                android:textColor="@color/color_del"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="仪器仪表专用设备表"
                android:textColor="@color/color_FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingRight="24dp"
                android:text="保存"
                android:textColor="@color/color_save"
                android:textStyle="bold" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="@color/color_FFFFFF" />

            <EditText
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:id="@+id/tv_name"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/shape_edtext"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="型号规格"
                android:textColor="@color/color_FFFFFF" />

            <EditText
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:id="@+id/tv_specification"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/shape_edtext"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精度"
                android:textColor="@color/color_FFFFFF" />

            <EditText
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:id="@+id/tv_accuracy"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/shape_edtext"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合格证明\n和有效期"
                android:textColor="@color/color_FFFFFF" />

            <EditText
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:id="@+id/tv_certificate"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/shape_edtext"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说明"
                android:textColor="@color/color_FFFFFF" />

            <EditText
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:id="@+id/tv_description"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/shape_edtext"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/color_FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>