<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_2B2B2B"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/color_2B2B2B"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:visibility="visible"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:background="@drawable/shape_ed2"
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                android:id="@+id/tv_code"
                android:layout_marginLeft="27dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号："
                android:textColor="@color/color_FFFFFF" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="77dp"
                android:text="名称："
                android:textColor="@color/color_FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_ed2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="13dp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="验收依据文件检查结论"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:textColor="@color/color_FFFFFF"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:id="@+id/et_yConclusion"
                    android:layout_marginLeft="10dp"
                    android:gravity="top"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="55dp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="齐套性检查结论"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:textColor="@color/color_FFFFFF"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:id="@+id/et_qConclusion"
                    android:layout_marginLeft="10dp"
                    android:gravity="top"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="过程检查结论"
                    android:textColor="@color/color_FFFFFF" />

                <EditText
                    android:textColor="@color/color_FFFFFF"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:paddingLeft="10dp"
                    android:id="@+id/et_gConclusion"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:gravity="top"
                    android:background="@drawable/shape_edtext"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/color_FFFFFF"
                    android:text="   技术类检查结论"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:textColor="@color/color_FFFFFF"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:id="@+id/et_jConclusion"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_edtext"
                    android:gravity="top"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:background="@drawable/shape_text"
                android:id="@+id/tv_save"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/color_5398F7"
                android:layout_width="60dp"
                android:layout_height="30dp"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/color_FFFFFF"
                android:text="产品验收情况："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


        <LinearLayout
            android:background="@color/color_3C3F41"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:gravity="center"
                android:textColor="@color/color_FFFFFF"
                android:text="序号"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/color_FFFFFF"
                android:text="产品编号"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/color_FFFFFF"
                android:text="产品名称"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/color_FFFFFF"
                android:text="是否通过验收"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.example.acceptance2.view.MyListView
            android:id="@+id/lv_list1"
            android:background="@drawable/shape_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:gravity="center"
                android:background="@drawable/shape_text"
                android:id="@+id/tv_add2"
                android:layout_centerVertical="true"
                android:textColor="@color/color_5398F7"
                android:text="添加验收遗留问题"
                android:layout_width="150dp"
                android:layout_height="30dp"/>

        </RelativeLayout>



        <LinearLayout
            android:background="@color/color_3C3F41"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:gravity="center"
                android:textColor="@color/color_FFFFFF"
                android:text="序号"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/color_FFFFFF"
                android:text="产品编号"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/color_FFFFFF"
                android:text="遗留问题"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/color_FFFFFF"
                android:text="遗留问题落实确认人"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.example.acceptance2.view.MyListView
            android:id="@+id/lv_list2"
            android:background="@drawable/shape_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout

            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_FFFFFF"
                android:text="验收人签字"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:id="@+id/iv_signature"
                android:background="@drawable/shape_edtext"
                android:layout_width="300dp"
                android:layout_height="90dp"/>
            <ImageView
                android:visibility="gone"
                android:background="@drawable/del"
                android:layout_marginLeft="-15dp"
                android:scaleType="fitXY"
                android:id="@+id/iv_XX"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>

        <EditText
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:background="@drawable/shape_edtext"
            android:id="@+id/tv_signature"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="100dp"
            android:textColor="@color/color_FFFFFF"
            android:hint="请验收人签字"
            android:layout_width="200dp"
            android:layout_height="36dp"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/color_FFFFFF"
                android:text="    签字时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:textColor="@color/color_FFFFFF"
                android:id="@+id/tv_time"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_edtext"
                android:layout_width="300dp"
                android:layout_height="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/color_5398F7"
                android:gravity="center"
                android:background="@drawable/shape_text"
                android:text="取消"
                android:layout_width="60dp"
                android:layout_height="30dp"/>
            <Button
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:background="@drawable/shape_text2"
                android:layout_marginLeft="24dp"
                android:text="确定"
                android:layout_width="60dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>